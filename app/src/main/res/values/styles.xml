<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/uwMetallicGold</item>
        <item name="colorPrimaryDark">@color/uwGold</item>
        <item name="colorAccent">@color/uwMetallicGold</item>
        <item name="android:textColorPrimary">@color/uwWhite</item>
        <item name="android:textColor">@color/uwPurple</item>
        <item name="android:textSize">24sp</item>
        <item name="android:tint">@color/uwPurple</item>
        <item name="android:editTextColor">@color/uwDarkGray</item>
        <item name="android:textColorHint">@color/uwDarkGray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/uwDarkGray</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CourseIdEditTextStyle" parent="EditTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonStyle">

    </style>

